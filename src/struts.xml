<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>

    <package name="default" namespace="/" extends="struts-default">
    
	<action name="login" class="action.autentication.Login" >
		<result name="admin" type="redirect" >/views/adminHome.jsp</result>	
		<result name="input" >/views/login_input.jsp</result>	
		<result name="login" >/views/login.jsp</result>		
		<result name="viajero" type="redirect">/</result>				
	</action>
	
	<action name="logout" class="action.autentication.Logout" >
		 <result name="logout" type="redirect">/</result>					
	</action>

	
	<action name="registerAction" class="action.register.Register" >		
		<result name="input" >/views/register_input.jsp</result>		
		<result name="success">/views/viajero_home.html</result>
		<result name="register">/views/register.jsp</result>
		<result name="viajero">/views/404.jsp</result>
		<result name="admin">/views/404.jsp</result>				
	</action>
	
	<action name="evento" class="action.evento.EventoNew" >
		<result name="error" type="redirect">/</result> <!--/views/505.jsp</result>-->
		<result name="login" type="redirect">/</result> <!--/views/login.jsp</result>-->		
		<result name="add_evento" type="redirect">/views/EventoNuevo.jsp</result> <!--/views/add_evento.jsp</result>-->
		<result name="add_evento_ok" type="redirect">/views/EventoNuevo.jsp</result> 
		<result name="add_evento_existe" type="redirect">/views/EventoNuevo.jsp</result>				
	</action>
	<action name="listarEventos" method="list" class="action.evento.EventoNew"> 
		<result name="success" type="redirect" >/views/listarEventos.jsp</result>
		<result name="error" type="redirect">/views/505.jsp</result>
		<result name="login" type="redirect">/views/login.jsp</result>
	</action>
	
	<action name="updateEvento" class="action.evento.EventoUpdate">
		<result name="success" type="redirect" >/views/listarEventos.jsp</result>	
	</action>
	
	
</package>

</struts>