<struts>

    <package name="default" namespace="/" extends="struts-default">
	<action name="loginAction" class="action.autentication.Login" >
		<result name="admin" type='redirect'>/views/admin_home.jsp</result>
		<result name="input" >/views/login_input.jsp</result>	
		<result name="login" >/views/login.jsp</result>		
		
		<result name="viajero" type='redirect'>/views/viajero_home.jsp</result>				
	</action>
	<action name="logoutAction" class="action.autentication.Logout" >
		<result name="success" >/views/index.html</result>
		
						
	</action>
	
	<action name="homeAction" class="action.home.Home">
		<result name="success">/views/home.jsp</result>
	</action>
	<action name="loginInitAction" class="action.autentication.LoginInit">
		<result name="success">/views/login.jsp</result>
	</action>
	
	<action name="registerAction" class="action.register.Register" >
		
		<result name="input" >/views/register_input.jsp</result>		
		<result name="success">/views/register_success.jsp</result>
		<result name="register">/views/register.jsp</result>
		<result name="viajero">/views/404.jsp</result>
		<result name="admin">/views/404.jsp</result>				
	</action>
